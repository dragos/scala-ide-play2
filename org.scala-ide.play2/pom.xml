<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.scala-ide</groupId>
    <artifactId>org.scala-ide.play2.build</artifactId>
    <version>0.1.0-SNAPSHOT</version>
  </parent>
  <artifactId>org.scala-ide.play2</artifactId>
  <packaging>eclipse-plugin</packaging>


  <dependencies>
    <dependency>
      <groupId>play</groupId>
      <artifactId>play_2.9.2</artifactId>
      <version>2.1-08292012</version>
    </dependency>
    <dependency>
      <groupId>play</groupId>
      <artifactId>templates_2.9.2</artifactId>
      <version>2.1-08292012</version>
    </dependency>
    <dependency>
      <groupId>com.github.scala-incubator.io</groupId>
      <artifactId>scala-io-core_2.9.2</artifactId>
      <version>0.4.0</version>
    </dependency>
    <dependency>
      <groupId>com.github.scala-incubator.io</groupId>
      <artifactId>scala-io-file_2.9.2</artifactId>
      <version>0.4.0</version>
    </dependency>
    <dependency>
      <groupId>com.github.jsuereth.scala-arm</groupId>
      <artifactId>scala-arm_2.9.1</artifactId>
      <version>1.1</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <!-- copy the mockito jar, so it can be used in eclipse -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
        <execution>
            <id>copy</id>
            <phase>initialize</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>play</groupId>
                  <artifactId>play_2.9.2</artifactId>
                  <outputDirectory>${project.build.directory}/lib</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>play</groupId>
                  <artifactId>templates_2.9.2</artifactId>
                  <outputDirectory>${project.build.directory}/lib</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>com.github.scala-incubator.io</groupId>
                  <artifactId>scala-io-core_2.9.2</artifactId>
                  <outputDirectory>${project.build.directory}/lib</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>com.github.scala-incubator.io</groupId>
                  <artifactId>scala-io-file_2.9.2</artifactId>
                  <outputDirectory>${project.build.directory}/lib</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>com.github.jsuereth.scala-arm</groupId>
                  <artifactId>scala-arm_2.9.1</artifactId>
                  <outputDirectory>${project.build.directory}/lib</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
